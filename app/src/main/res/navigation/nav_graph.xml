<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ListaPersonagem">

    <fragment
        android:id="@+id/ListaPersonagem"
        android:name="com.desafio_android_gustavo_rocha.ui.fragment.RecyclerFragmet"
        android:label="Lista de Personagem"
        tools:layout="@layout/recycler" >
        <action
            android:id="@+id/action_ListaPersonagem_to_Detalhe"
            app:destination="@id/Detalhe"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/Detalhe"
        android:name="com.desafio_android_gustavo_rocha.ui.fragment.DetalheFragment"
        android:label="Detalhe"
        tools:layout="@layout/fragment_detalhe_personagem">
        <argument
            android:name="personagem"
            app:argType="com.desafio_android_gustavo_rocha.models.Character" />
        <action
            android:id="@+id/action_Detalhe_to_hq"
            app:destination="@id/hq"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/hq"
        android:name="com.desafio_android_gustavo_rocha.ui.fragment.HqFragment"
        android:label="Hq"
        tools:layout="@layout/fragment_hq">
        <argument
            android:name="comicId"
            app:argType="integer" />
    </fragment>
</navigation>