<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hq_img_personagem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/hq_tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Titulo"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hq_img_personagem" />

    <TextView
        android:id="@+id/hq_tv_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Carregando"
        app:layout_constraintEnd_toEndOf="@+id/hq_tv_titulo"
        app:layout_constraintStart_toStartOf="@+id/hq_tv_titulo"
        app:layout_constraintTop_toBottomOf="@+id/hq_tv_titulo" />

    <TextView
        android:id="@+id/hq_tv_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="PreÃ§o"
        app:layout_constraintEnd_toEndOf="@+id/hq_tv_descricao"
        app:layout_constraintStart_toStartOf="@+id/hq_tv_descricao"
        app:layout_constraintTop_toBottomOf="@+id/hq_tv_descricao" />
</androidx.constraintlayout.widget.ConstraintLayout>